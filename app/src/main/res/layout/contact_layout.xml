<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ZulekhaWhite"
    android:id="@+id/top_layout">



    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:id="@+id/nav_icon">

                <ImageView
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:id="@+id/back_image"
                    android:background="@drawable/sign_out_option"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:typeface="sans"
                    android:text="Contact Us"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/heading_size"
                    android:id="@+id/header_text"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1">

            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/ounded_rectangle_cnt_tp"

        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_height="@dimen/_40sdp">

        <Spinner
            android:id="@+id/location_spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentTop="true"
android:paddingRight="@dimen/_10sdp"
            android:tag="s"

            android:typeface="sans" />
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/webview_linear_layout"
            android:background="@drawable/rounded_rectangle_cnt"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center">



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/linear_pobox"
    android:text="P.O.Box "
    android:textColor="#000000"
    android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_phone"
                android:text="Phone"
                android:textColor="#000000"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_fax_no"
                android:text="Fax No"
                android:textColor="#000000"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_for_appointments"
                android:text="For Appointments"
                android:textColor="#000000"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_information"
                android:text="Information"
                android:textColor="#000000"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_send_resumes"
                android:text="Send resumes to"
                android:textColor="#000000"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_near"
                android:text="near"
                android:textColor="#000000"
                android:layout_gravity="center"/>

                    <!--<WebView
                        android:id="@+id/vv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                      android:layout_margin="@dimen/_10sdp"
                        android:textAlignment="center"
                        android:layout_gravity="center"

                     />-->



        </LinearLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/buttons_linearlayout"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    >

            <Button
                android:id="@+id/call"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="5dp"

                android:background="@drawable/ounded_rectangle_cnt_btn"
                android:drawableLeft="@drawable/phone_call_cn"

                android:typeface="sans"
                android:padding="10dp"
                android:textSize="13sp"
                android:paddingLeft="15dp"

                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="5dp"
                android:background="@drawable/ounded_rectangle_cnt_btn"
                android:drawableLeft="@drawable/mail_cn"
                android:gravity="center"
                android:onClick="sendMail"
                android:typeface="sans"
                android:textSize="13sp"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/map_finder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_margin="5dp"
                android:background="@drawable/ounded_rectangle_cnt_btn"
                android:drawableLeft="@drawable/planet_earth"
                android:gravity="center"
                android:typeface="sans"
                android:onClick="showMap"
                android:textSize="13sp"
                android:padding="10dp"
                android:text="Find Us on Map"
                android:textAllCaps="false"
                android:textColor="@android:color/black"/>
</LinearLayout>
          </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".25"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_tab"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:background="@drawable/tabar_bg"
                android:layout_height="fill_parent" />

            <ImageButton
                android:id="@+id/more"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/tabar_bg"
                android:padding="@dimen/_10sdp"
                android:scaleType="fitCenter"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/house_outline" >
            </ImageButton>
            <ImageButton
                android:id="@+id/dep"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/tabar_bg"
                android:padding="@dimen/_10sdp"
                android:scaleType="fitCenter"


                android:src="@drawable/doctor_stethoscope" >
            </ImageButton>

            <ImageButton
                android:id="@+id/appoint"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/tabar_bg"
                android:padding="@dimen/_10sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/calendar" >
            </ImageButton>

            <ImageButton
                android:id="@+id/util"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/tabar_bg"
                android:padding="@dimen/_10sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/search" >
            </ImageButton>


            <ImageButton
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:background="@drawable/tabar_bg"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"



        android:layout_centerInParent="true" />



</RelativeLayout>