<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_220sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:orientation="vertical"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:background="@drawable/border_insurence_tracking"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_tracking_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tracking No: 01"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textSize="@dimen/_9sdp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:gravity="center|left">

                <TextView
                    android:id="@+id/txt_approval_status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Approval Status : Pending"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:textColor="@color/White"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:background="@drawable/border_insurence_two">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center|left"
                    android:layout_weight=".6"
                    android:background="@color/white"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_weight=".6">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Service Name  : "

                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/txt_service_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Completed Blood Count -HE"
                                android:textColor="#808080"

                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="#bbbfbebe"

                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"

                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".6">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:text="          Remarks :"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/txt_remarks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text=" Test"

                                android:textColor="#808080"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bbbfbebe" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txt_approval_"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Approval Limit : "
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_11sdp" />

                            <TextView
                                android:id="@+id/txt_approval_limit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 10"

                                android:textColor="#808080"
                                android:textSize="@dimen/_11sdp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Validity : "
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_11sdp"

                                />

                            <TextView
                                android:id="@+id/txt_validity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01-06-2017"
                                android:textColor="#808080"

                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bbbfbebe" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight=".2"
                    android:gravity="center"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service Cost :"

                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/txt_service_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 100"

                            android:textColor="#808080"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
