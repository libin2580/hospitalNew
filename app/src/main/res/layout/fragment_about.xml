<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ZulekhaWhite" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".1">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1"
        android:layout_gravity="center|right"
        android:gravity="center|right"
        android:id="@+id/nav_icon">

        <ImageView
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_15sdp"
            android:id="@+id/back_image"
            android:background="@drawable/sign_out_option"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".8"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:typeface="sans"
            android:text="About Us"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="@dimen/heading_size"
            android:id="@+id/header_text"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".1">

    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2">
        <ImageView
            android:id="@+id/zulekha_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_below="@+id/header_text"
            android:layout_centerHorizontal="true"


            android:src="@drawable/logo" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:background="@drawable/rounded_rectangle_cn"
        android:padding="10dp"
        android:layout_margin="@dimen/_10sdp"
        >



                <WebView
                    android:id="@+id/textData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/social_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="0.64"




                    android:textColor="@android:color/black"
                    android:typeface="serif" />

                <!--
                            <TextView
                                android:id="@+id/textData1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textColor="@android:color/black"
                                android:typeface="sans" >
                            </TextView>

                            <TextView
                                android:id="@+id/textData2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textColor="@android:color/black"
                                android:typeface="sans" >
                            </TextView>
                         -->





    </LinearLayout>

    </LinearLayout>

    

