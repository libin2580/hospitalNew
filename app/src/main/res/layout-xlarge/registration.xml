<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_bg"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_56sdp"
        android:paddingLeft="@dimen/_24sdp"
        android:paddingRight="@dimen/_24sdp"
        android:weightSum="1">

        <ImageView android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.18" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp"
                android:hint="Name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="0.05"
            android:weightSum="1">

            <TextView android:id="@+id/input_gender"
                android:layout_width="@dimen/_85sdp"
                android:gravity="left|center"
                android:layout_height="@dimen/_30sdp"
                android:inputType="text"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/_4sdp"
                android:textSize="@dimen/_13sdp"
                android:hint="Gender" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.27">
                <RadioButton
                    android:layout_width="@dimen/_102sdp"
                    android:layout_height="match_parent"
                    android:id="@+id/radioMale"
                    android:checked="true"
                    android:textSize="@dimen/_10sdp"
                    android:text="Male" />



                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/radioFemale"
                    android:text="Female"
                    android:textSize="@dimen/_10sdp"
                    android:layout_weight="0.42" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText android:id="@+id/input_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#000000"
android:textSize="@dimen/_13sdp"
                android:hint="Age" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText android:id="@+id/input_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="@dimen/_13sdp"
                android:textColor="#000000"
                android:hint="Phone" /></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_weight="0.09"
            android:weightSum="1">
            <TextView android:id="@+id/input_nationality"
                android:layout_width="@dimen/_91sdp"
                android:layout_height="@dimen/_35sdp"
                android:inputType="text"
                android:gravity="left|center"
                android:textColor="#000000"
                android:hint="Nationality"
                android:layout_marginLeft="@dimen/_4sdp"
                android:textSize="@dimen/_13sdp"
                android:layout_weight="0.57" />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"


                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp"
                android:hint="Email" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="0.02"
            android:weightSum="1">
            <TextView android:id="@+id/input_type"
                android:layout_width="@dimen/_88sdp"
                android:layout_height="@dimen/_35sdp"
                android:inputType="text"
                android:gravity="center|left"
                android:textColor="#000000"
                android:hint="Patient Type"
                android:layout_marginLeft="@dimen/_4sdp"
                android:textSize="@dimen/_13sdp"
                android:layout_weight="0.11" />
            <RadioGroup
                android:id="@+id/radio_group_patient"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="@dimen/_102sdp"
                    android:layout_height="match_parent"
                    android:id="@+id/radioSelf"
                    android:checked="true"
                    android:textSize="@dimen/_10sdp"
                    android:text="Self Paying Patient" />



                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioInsurence"
                    android:textSize="@dimen/_10sdp"
                    android:text="Insurance\n Patient" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

         >
            <EditText android:id="@+id/input_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/_13sdp"
                android:textColor="#000000"
                android:hint="Username" /></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp"
                android:hint="Password"/></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText android:id="@+id/confirm_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="@dimen/_13sdp"
                android:hint="Confirm Password"/></LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_86sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_sign_up"
                    android:background="@drawable/signup_button"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:padding="@dimen/_12sdp"
                    android:textSize="@dimen/_13sdp"
                    android:text="Sign-Up"
                    android:textColor="#ffffff"/></LinearLayout></FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/lin_signup"

                android:layout_width="346dp"
                android:layout_height="40dp"
                android:layout_weight="0.27">


                <TextView android:id="@+id/link_signup"
                    android:layout_width="249dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:text="Already have an account"
                    android:gravity="center|right"
                    android:textSize="16dip"

                    android:layout_marginRight="@dimen/_5sdp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"


                    android:background="@drawable/questian_mark"
                    android:id="@+id/imageView" />
            </LinearLayout>
        </FrameLayout>
        <!-- <ProgressBar android:id="@+id/progress_bar"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:visibility="gone"

             android:layout_centerInParent="true" />-->


    </LinearLayout>

</ScrollView>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"

        android:layout_centerInParent="true" />
</RelativeLayout>
