<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_bg">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight=".8"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_100sdp"

            android:layout_gravity="center"
            android:background="@drawable/logo"
            android:id="@+id/imageView" />
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:layout_height="0dp">




                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:inputType="textEmailAddress"
                   android:hint="Username/E-mail"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:drawableLeft="@drawable/user_icon"
android:textSize="@dimen/_13sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:id="@+id/us_nam"
                  />







                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:inputType="textPassword"
                    android:hint="Password"
android:drawableLeft="@drawable/lockd_icon"
                    android:drawablePadding="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_13sdp"

                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/pw_d"
              />


        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight=".9"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="0dp">


                <Button
                    android:text="Sign In"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/sign_button"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_13sdp"

                    android:textAllCaps="false"
                    android:id="@+id/btn_login" />

                <Button
                    android:text="Sign Up"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:background="@drawable/signup_button"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12sdp"

                    android:id="@+id/txt_signup" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:id="@+id/txt_skip"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/_25sdp"

                    android:textColor="@color/green_dark"
                    android:text="skip"/>



            </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight=".7"
        android:layout_height="0dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".6"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="0dp"
            >
            <TextView
                android:text="Forgot Password"
                android:layout_width="@dimen/_138sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/_13sdp"

                android:gravity="center"
                android:id="@+id/txt_forgot" />
            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
             android:layout_gravity="center"
                android:background="@drawable/questian_mark"
                android:gravity="center"
                android:id="@+id/imageView4"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:gravity="center|bottom"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_3sdp">

            <TextView
                android:text="Sign In With"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_gravity="center"
                android:textSize="@dimen/_13sdp"

                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight=".8"
            android:layout_gravity="center|top"
            android:gravity="center|top"
            android:layout_height="0dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                login_text=""
                android:visibility="gone"
                android:scaleType="centerInside"
                 />

            <ImageView
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_27sdp"
              android:background="@drawable/fb_icon"
                android:layout_marginLeft="@dimen/_5sdp"
                android:id="@+id/txt_fb"

                android:layout_marginTop="@dimen/_5sdp"
              />
            <com.google.android.gms.common.SignInButton
                android:id="@+id/btn_sign_in"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_35sdp"

                android:layout_marginLeft="@dimen/_10sdp"

                />

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
              android:background="@drawable/twitter_icon"
                android:layout_marginLeft="@dimen/_5sdp"
                android:visibility="gone"
                android:id="@+id/imageView6"
              />

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
             android:background="@drawable/google_icon"
                android:layout_marginLeft="@dimen/_5sdp"
                android:visibility="gone"
                android:id="@+id/imageView7"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"



        android:layout_centerInParent="true" />
</RelativeLayout>

