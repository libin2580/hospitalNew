<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/patient_nam_un"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"

                android:layout_margin="@dimen/_2sdp"
                android:paddingLeft="20dp"
                android:layout_marginTop="@dimen/_2sdp"

                android:inputType="textPersonName"
                android:textColor="#000000"

                android:hint=" Patient Name"
                android:windowSoftInputMode="stateHidden"
                android:background="@drawable/edt_back"

                android:gravity="left|center"


                android:textSize="@dimen/_12sdp" />
            <EditText
                android:id="@+id/mob_no_un"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"
                android:paddingLeft="20dp"
                android:layout_marginTop="@dimen/_2sdp"

                android:windowSoftInputMode="stateHidden"
                android:inputType="phone"

                android:textColor="#000000"
                android:background="@drawable/edt_back"
                android:hint="  Mobile No"


                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/eml_un"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"
                android:paddingLeft="20dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:windowSoftInputMode="stateHidden"
                android:inputType="textEmailAddress"

                android:textColor="#000000"
                android:background="@drawable/edt_back"
                android:hint="  Email"


                android:textSize="@dimen/_14sdp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"

                android:paddingLeft="20dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#000000"
                android:background="@drawable/edt_back"
                android:hint="Nationality"
                android:id="@+id/natl_un"

                android:textSize="@dimen/_12sdp" ></Spinner>
            <RadioGroup
                android:id="@+id/gender_un"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/edt_back"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                >

                <RadioButton
                    android:id="@+id/male_id_un"
                    android:text="Male"
                    android:typeface="sans"
                    android:checked="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@android:color/black"/>

                <RadioButton
                    android:id="@+id/female_id_un"
                    android:text="Female "
                    android:typeface="sans"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@android:color/black"/>
            </RadioGroup>
            <RadioGroup
                android:id="@+id/patient_type_un"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/edt_back"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp" >

                <RadioButton
                    android:id="@+id/sp_un"
                    android:text="Self Paying"
                    android:typeface="sans"
                    android:checked="true"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@android:color/black"/>

                <RadioButton
                    android:id="@+id/i_un"
                    android:text="Insurance "
                    android:typeface="sans"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@android:color/black"/>
            </RadioGroup>
            <TextView
                android:id="@+id/dob_date_un"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bottom_menu"
                android:layout_margin="@dimen/_2sdp"
                android:paddingLeft="20dp"
                android:windowSoftInputMode="stateHidden"
                android:layout_marginTop="@dimen/_2sdp"
                android:editable="false"
                android:clickable="true"
                android:textColor="#000000"

                android:hint="Dob"
                android:background="@drawable/edt_back"

                android:gravity="left|center"


                android:textSize="@dimen/_12sdp" />
            <TextView
                android:id="@+id/aapoint_date_un"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bottom_menu"
                android:layout_margin="@dimen/_2sdp"
                android:paddingLeft="20dp"
                android:windowSoftInputMode="stateHidden"
                android:layout_marginTop="@dimen/_2sdp"

                android:editable="false"
                android:textColor="#000000"
                android:clickable="true"
                android:hint=" Appointment Date"
                android:background="@drawable/edt_back"

                android:gravity="left|center"


                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/aapoint_time_un"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bottom_menu"
                android:layout_margin="@dimen/_2sdp"
                android:paddingLeft="20dp"
                android:windowSoftInputMode="stateHidden"
                android:layout_marginTop="@dimen/_2sdp"

                android:editable="false"
                android:textColor="#000000"
                android:clickable="true"
                android:hint=" Appointment Time"
                android:background="@drawable/edt_back"

                android:gravity="left|center"


                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/depmnt_un"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bottom_menu"
                android:layout_marginTop="@dimen/_2sdp"
                android:windowSoftInputMode="stateHidden"
                android:layout_margin="@dimen/_2sdp"
                android:paddingLeft="20dp"

                android:textColor="@android:color/black"

                android:hint=""

                android:editable="false"
                android:background="@drawable/edt_back"


                android:textSize="@dimen/_12sdp" />
            <TextView
                android:id="@+id/dv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:textColor="@android:color/black"
                android:layout_centerInParent="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <EditText
                android:id="@+id/doctors_un"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/bottom_menu"
                android:layout_marginTop="@dimen/_2sdp"
                android:windowSoftInputMode="stateHidden"
                android:layout_margin="@dimen/_2sdp"
                android:paddingLeft="20dp"
                android:editable="false"
                android:textColor="@android:color/black"

                android:hint=""


                android:background="@drawable/edt_back"


                android:textSize="@dimen/_12sdp" />



            <EditText
                    android:id="@+id/diag_nois_un"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/bottom_menu"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:windowSoftInputMode="stateHidden"
                    android:layout_margin="@dimen/_2sdp"
                android:paddingLeft="20dp"

                android:textColor="#000000"
                    android:visibility="gone"
                    android:hint=" Diagnosis"

                android:background="@drawable/edt_back"


                    android:textSize="@dimen/_12sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="center"
                        android:text="Stay ahead from the rest by choosing *Fast Track Clinic"
                        android:textColor="@color/gray_darker"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight=".7"
                    android:background="@drawable/layer_80"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1"
                        android:background="@drawable/bullent_zh">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center|left"
                            android:text="No waiting time"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_darker"

                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight=".7"
                    android:background="@drawable/layer_80"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1"
                        android:background="@drawable/bullent_zh">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center|left"
                            android:text="One-on-one assistance"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_darker"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_weight=".7"
                    android:background="@drawable/layer_80"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1"
                        android:background="@drawable/bullent_zh">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:gravity="center|left"
                            android:text="Free Refreshment"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_darker"

                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/fastrack_clinic_unreg"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_2sdp"

                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">

                        <RadioButton
                            android:id="@+id/stay_ahead_unreg"
                            android:checked="true"
                            android:text="Yes"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@android:color/black"
                            android:typeface="sans" />

                        <RadioButton
                            android:id="@+id/no_ahead_unreg"
                            android:text="No"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@android:color/black"
                            android:typeface="sans" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/submt_btn_un"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Submit"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_back"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginRight="10dp"
                        />
                    <Button
                        android:id="@+id/cancl_btn_un"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:textColor="@android:color/white"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        />
                </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_bar_un"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"

                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"></LinearLayout>
        </LinearLayout>



    </ScrollView>
